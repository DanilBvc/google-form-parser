{
  "manifest_version": 3,
  "name": "Google Forms Scanner",
  "version": "1.0",
  "description": "Scans Google Forms and integrates with Gemini API",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://docs.google.com/forms/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Google Forms Scanner"
  },
  "content_scripts": [
    {
      "matches": [
        "https://docs.google.com/forms/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "translations.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}